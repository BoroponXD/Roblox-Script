local function createButton(parent, text, posY, toggleVar)
    local button = Instance.new("TextButton", parent)
    button.Size = UDim2.new(0.8, 0, 0.1, 0)
    button.Position = UDim2.new(0.1, 0, posY, 0)
    button.TextColor3 = Color3.new(1, 1, 1)
    button.BackgroundTransparency = 0.6
    button.BorderSizePixel = 2

    local function updateButtonState()
        local state = _G[toggleVar] or false
        button.Text = text .. ": " .. (state and "ON" or "OFF")
        button.BackgroundColor3 = state and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(200, 0, 0)
    end

    button.MouseButton1Click:Connect(function()
        _G[toggleVar] = not _G[toggleVar]
        updateButtonState()
        saveSettings()
    end)

    updateButtonState()

    return button
end

local function toggleAllButtons(buttons, state)
    for _, buttonData in pairs(buttons) do
        _G[buttonData.toggleVar] = state
        buttonData.button.Text = buttonData.text .. ": " .. (state and "ON" or "OFF")
        buttonData.button.BackgroundColor3 = state and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(200, 0, 0)
    end
    saveSettings()
end

