    AutoCollectButton.Text = "AutoCollect: " .. (_G.AutoCollect_Enabled and "ON" or "OFF")
    AutoFlyButton.Text = "AutoFly: " .. (_G.AutoFly_Enabled and "ON" or "OFF")
    NoclipButton.Text = "Noclip: " .. (_G.Noclip_Enabled and "ON" or "OFF")
